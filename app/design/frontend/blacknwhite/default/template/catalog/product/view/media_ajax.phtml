<?php
	$meigee_blacknwhite_productpage = MAGE::helper('ThemeOptionsBlacknwhite')->getThemeOptionsBlacknwhite('meigee_blacknwhite_productpage');
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
	$helpImg = $this->helper('ThemeOptionsBlacknwhite/images');
?>
<div class="ajax-media-holder">
	<div class="more-views">
		<ul>
			<?php if (count($this->getGalleryImages()) < 1): ?>
			<li class="last">
				<a href="javascript:void(0);" title="<?php echo $this->htmlEscape($this->getImageLabel()); ?>"><img src="<?php echo $helpImg->getImg($_product, 'image', 100, null); ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel()); ?>" /></a>
			</li>
			<?php endif; ?>
			<?php if (count($this->getGalleryImages()) > 0): ?>
				<?php
					$productCounter = 1; 
					foreach ($this->getGalleryImages() as $_image): 
					if($productCounter < 4):
				?>
				<li<?php if($productCounter == 3 or ($productCounter == count($this->getGalleryImages()))){echo ' class="last"';} ?>>
					<a href="javascript:void(0);" <?php echo $helpImg->getImgSources($_product, 'thumbnail', 420, null, $_image->getFile(), 'ajax-media'); ?> title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img <?php echo $helpImg->getImgSources($_product, 'thumbnail', 60, null, $_image->getFile()); ?> alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
				</li>
				<?php
					else:
						break;
					endif;
					$productCounter++; 
					endforeach;
				?>
			<?php endif; ?>
		</ul>
	</div>
</div>